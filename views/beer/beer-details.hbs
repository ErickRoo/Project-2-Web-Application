<div>
  <div>
    <img src="{{imageUrl}}" alt="{{imageUrl}}">
    <h5>{{name}}</h5>
    <p>{{style}}</p>
    <p>{{abv}}</p>
    <p>{{ibu}}</p>
    <p>{{description}}</p>
    <p>{{pairing}}</p>
  </div>
