    <input type="text" name="title" id="label-title">

    <label for="label-content">Cuéntanos</label>
    <textarea name="content" id="label-content" cols="30" rows="10"></textarea>

    <div class="form-group">
      <label>Image:
        <input type="file" name="imageUrlPost" class="form-control-file" />
      </label>
    </div>

    <button type="submit">¡Comenta!</button>

  </form>
